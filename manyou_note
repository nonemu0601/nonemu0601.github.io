<body>
    <div class="container">
        <h1>üìñ ‰∏áËëâÈõÜÂ≠¶Áøí„Éé„Éº„Éà</h1>

        <div class="mode-tabs">
            <button class="tab-btn active" onclick="switchMode('add')">ËøΩÂä†</button>
            <button class="tab-btn" onclick="switchMode('view')">‰∏ÄË¶ß</button>
        </div>

        <div id="addMode" class="card active">
            <div id="successMessage" class="success-message">Ê≠å„ÇíË®òÈå≤„Åó„Åæ„Åó„ÅüÔºÅ</div>
            <form id="poemForm">
                <div class="form-group">
                    <label for="number">Ê≠åÁï™Âè∑Ôºà‰æã: 1-20Ôºâ</label>
                    <input type="text" id="number" placeholder="Â∑ª-Áï™Âè∑Ôºà‰æã: 1-20Ôºâ" required pattern="[0-9]+-[0-9]+">
                </div>

                <div class="form-group">
                    <label for="poem">Ê≠å</label>
                    <textarea id="poem" placeholder="‰æã: Êò•ÈÅé„Åé„Å¶ Â§èÊù•„Å´„Åë„Çâ„Åó ÁôΩÂ¶ô„ÅÆ Ë°£Âπ≤„Åô„Å¶„Åµ Â§©„ÅÆÈ¶ôÂÖ∑Â±±" required></textarea>
                </div>

                <div class="form-group">
                    <label for="meaning">ÊÑèÂë≥„ÉªÁèæ‰ª£Ë™ûË®≥</label>
                    <textarea id="meaning" placeholder="„Åì„ÅÆÊ≠å„ÅÆÊÑèÂë≥„ÇíÂÖ•Âäõ" required></textarea>
                </div>

                <div class="form-group">
                    <label for="author">‰ΩúËÄÖ</label>
                    <input type="text" id="author" placeholder="‰æã: ÊåÅÁµ±Â§©Áöá" required>
                </div>

                <button type="submit">Ë®òÈå≤„Åô„Çã</button>
            </form>
        </div>

        <div id="viewMode" class="card">
            <div id="poemList"></div>
        </div>
    </div>

    <script>
        let poems = [];
        let currentMode = 'add';

        function loadPoems() {
            const saved = localStorage.getItem('manyoshuPoems');
            if (saved) {
                poems = JSON.parse(saved);
                displayPoems();
            }
        }

        function savePoems() {
            localStorage.setItem('manyoshuPoems', JSON.stringify(poems));
        }

        function parseNumber(numStr) {
            const parts = numStr.split('-');
            return {
                volume: parseInt(parts[0]),
                number: parseInt(parts[1]),
                original: numStr
            };
        }

        function sortPoems() {
            poems.sort((a, b) => {
                const aNum = parseNumber(a.number);
                const bNum = parseNumber(b.number);
                
                if (aNum.volume !== bNum.volume) {
                    return aNum.volume - bNum.volume;
                }
                return aNum.number - bNum.number;
            });
        }

        function groupByVolume() {
            const groups = {};
            poems.forEach(poem => {
                const parsed = parseNumber(poem.number);
                const vol = parsed.volume;
                if (!groups[vol]) {
                    groups[vol] = [];
                }
                groups[vol].push(poem);
            });
            return groups;
        }

        function displayPoems() {
            const list = document.getElementById('poemList');
            
            if (poems.length === 0) {
                list.innerHTML = '<div class="empty-state">„Åæ„Å†Ê≠å„ÅåË®òÈå≤„Åï„Çå„Å¶„ÅÑ„Åæ„Åõ„Çì</div>';
                return;
            }

            sortPoems();
            const groups = groupByVolume();
            
            let html = '';
            Object.keys(groups).sort((a, b) => parseInt(a) - parseInt(b)).forEach(vol => {
                const volumePoems = groups[vol];
                html += `
                    <div class="volume-section">
                        <div class="volume-header">
                            <span>Â∑ªÁ¨¨${vol}</span>
                            <span class="volume-count">${volumePoems.length}È¶ñ</span>
                        </div>
                        ${volumePoems.map((poem, index) => `
                            <div class="poem-item">
                                <div class="poem-number">${poem.number}</div>
                                <div class="poem-text">${poem.poem}</div>
                                <div class="poem-meaning">„ÄêÊÑèÂë≥„Äë${poem.meaning}</div>
                                <div class="poem-author">‰ΩúËÄÖ: ${poem.author}</div>
                                <button class="delete-btn" onclick="deletePoem('${poem.number}')">ÂâäÈô§</button>
                            </div>
                        `).join('')}
                    </div>
                `;
            });
            
            list.innerHTML = html;
        }

        function deletePoem(number) {
            poems = poems.filter(p => p.number !== number);
            savePoems();
            displayPoems();
        }

        function switchMode(mode) {
            currentMode = mode;
            
            document.querySelectorAll('.tab-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            document.querySelectorAll('.card').forEach(card => {
                card.classList.remove('active');
            });
            
            if (mode === 'add') {
                document.querySelectorAll('.tab-btn')[0].classList.add('active');
                document.getElementById('addMode').classList.add('active');
            } else {
                document.querySelectorAll('.tab-btn')[1].classList.add('active');
                document.getElementById('viewMode').classList.add('active');
                displayPoems();
            }
        }

        document.getElementById('poemForm').addEventListener('submit', function(e) {
            e.preventDefault();

            const newPoem = {
                number: document.getElementById('number').value,
                poem: document.getElementById('poem').value,
                meaning: document.getElementById('meaning').value,
                author: document.getElementById('author').value
            };

            poems.push(newPoem);
            savePoems();

            this.reset();
            
            const msg = document.getElementById('successMessage');
            msg.classList.add('show');
            setTimeout(() => {
                msg.classList.remove('show');
            }, 2000);
        });

        loadPoems();
    </script>
</body>
